---
import "../styles/global.css";
const { title = "이동수하우스", description = "생활·환경 IT 솔루션" } = Astro.props;
---
<!doctype html>
<html lang="ko" class="min-h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" />
    <script>
      // 다크모드 유지(FOUC 방지)
      try { if (localStorage.getItem('theme') === 'dark') document.documentElement.classList.add('dark'); } catch(e){}
    </script>
  </head>
  <body>
    <!-- Sticky / Glass Header -->
    <header class="sticky top-0 z-50 border-b border-black/5 dark:border-white/10
                   backdrop-blur bg-white/70 dark:bg-black/30">
      <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 font-semibold">
          <!-- 심플 로고 아이콘 (인라인 SVG) -->
          <svg width="22" height="22" viewBox="0 0 24 24" class="text-[--color-primary]">
            <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11L12 4l8 7v8H4z" />
              <path d="M9 14c-1.2-.9-1.2-2.6 0-3.5c1.4-.8 2.7.1 2.5 1.7c-.2 1.5-1.5 2.2-2.5 1.8Z" />
              <circle cx="12" cy="16" r="1" />
              <line x1="12" y1="16" x2="12" y2="20" />
            </g>
          </svg>
          이동수하우스
        </a>
        <nav class="flex items-center gap-6 text-sm">
          <a href="/about" class="hover:underline">About</a>
          <a href="/services" class="hover:underline">Services</a>
          <a href="/works" class="hover:underline">Works</a>
          <a href="/contact" class="hover:underline">Contact</a>
          <button
            class="rounded-lg px-2 py-1 text-xs border border-white/30 dark:border-white/20"
            aria-label="Toggle dark mode"
            onclick="
              const html = document.documentElement;
              const next = html.classList.toggle('dark');
              try { localStorage.setItem('theme', next ? 'dark' : 'light'); } catch(e){}
            "
          >🌓</button>
        </nav>
      </div>
    </header>

    <!-- Decorative background layer -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <div class="bg-grid w-full h-[60vh]"></div>
      <div class="absolute -top-16 -left-16 w-[400px] h-[400px] rounded-full blob
                  bg-[radial-gradient(circle_at_center,_rgba(71,163,255,0.35),_transparent_60%)]"></div>
      <div class="absolute top-10 right-0 w-[520px] h-[520px] rounded-full blob
                  bg-[radial-gradient(circle_at_center,_rgba(110,231,255,0.3),_transparent_60%)]"></div>
    </div>

    <main id="main" class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>

    <footer class="mt-16 border-t border-black/5 dark:border-white/10">
      <div class="mx-auto max-w-6xl px-4 py-8 text-sm text-gray-500 dark:text-gray-400">
        © {new Date().getFullYear()} 이동수하우스 · 생활과 환경을 위한 IT 솔루션
      </div>
    </footer>
  </body>
</html>
